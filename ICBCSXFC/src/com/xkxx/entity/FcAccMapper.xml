<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"      
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xkxx.dao.FcAccDao">
	<!-- 获取福彩所有类型 -->
	<select id="getAllFccAcc" 
		resultType="com.xkxx.entity.FcAcc">
		<![CDATA[
			select 
				typename,accno,accname,type   
			from sxfc_fcacc a 
		]]>
	</select>
	
	
	<!--///////////////////////////////////////////////////////////////////// -->
	<!--<select id="findRows"
		parameterType="com.xkxx.entity.page.Page"
		resultType="int">
